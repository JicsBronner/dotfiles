exec --no-startup-id xrandr --output eDP-1-1 --auto --primary

bindsym --release Print exec "scrot -m '/home/jc/Images/screenshots/%s_%H%M_%d.%m.%Y_$wx$h.png'"
bindsym --release Shift+Print exec "scrot -s '/home/jc/Images/screenshots/%s_%H%M_%d%m%Y_$wx$h.png'"
bindsym --release $mod+Shift+Print exec "scrot -u -d 4 '/home/jc/Images/screenshots/%s_%H%M_%d%m%Y_$wx$h.png'"

